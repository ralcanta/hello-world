
public class Application {
	public static void main(String[] args) {

		for(int i=0;i<5;i++){
			System.out.printf("The value of i is: %d\n" , i);
			//%d will replace the value of the argument you specify in this
			//case i, also \n is to create a new line. this method 
			// (printf)doesn't 
		//separate the text into new lines
		}
		
	}
}
